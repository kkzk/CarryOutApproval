# ActiveDirectory 管理者認証情報
AD_SERVER=ldap://your-domain-controller.example.com:389
AD_ADMIN_DN=CN=Administrator,CN=Users,DC=example,DC=com
AD_ADMIN_PASSWORD=your_admin_password

# ActiveDirectory のベースDN
AD_BASE_DN=DC=example,DC=com

# ActiveDirectory のユーザ作成設定
AD_USERS_OU=CN=Users,DC=example,DC=com
AD_DEFAULT_PASSWORD=TempPassword123!

# LDAPS接続を使用する場合は以下を使用
# AD_SERVER=ldaps://your-domain-controller.example.com:636
# AD_USE_SSL=true

# ログレベル (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
